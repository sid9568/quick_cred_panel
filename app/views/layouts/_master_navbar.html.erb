<header class="flex items-center justify-between bg-white p-3 border-b">
      <!-- Search -->
      <div class="relative w-1/3">
        <input type="text" placeholder="Search..."
          class="w-full border rounded-lg pl-10 pr-3 py-2 focus:ring-2 focus:ring-indigo-500 outline-none" />
        <i class="fa fa-search absolute left-3 top-3 text-gray-400"></i>
      </div>
      <!-- Right -->
      <div class="flex items-center gap-6">
        <button><i class="fa fa-bell text-gray-600"></i></button>
        <div>
          <%= button_to "Logout", master_sessions_destroy_path,
          method: :delete,
          data: { turbo: false },
           class: "py-1 text-white font-bold px-2 rounded-lg bg-red-600" %>
        </div>
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 rounded-full bg-indigo-600 text-white flex items-center justify-center">M</div>
          <span class="font-medium">Master</span>
          <i class="fa fa-chevron-down text-gray-500"></i>
        </div>
      </div>
    </header>