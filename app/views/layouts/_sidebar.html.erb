        <i class="fa fa-user"></i>
        Admin
        <i class="fa fa-caret-down ml-auto"></i>
      </button>

      <div data-superadmindropdown-target="bankmenu" class="hidden pl-8 space-y-1">
        <a href="/superadmin/admins/new" class="block py-2 hover:bg-yellow-500">Create</a>
        <a href="/superadmin/admins" class="block py-2 hover:bg-yellow-500">List</a>
