<header class="flex items-center justify-between bg-white p-3 border-b relative bg-gradient-to-r from-yellow-50 to-yellow-100 shadow-sm overflow-visible" data-controller="dropdown">
  <!-- Search -->
  <div class="relative w-1/3">
    <%# <input type="text" placeholder="Search..."
      class="w-full border rounded-lg pl-10 pr-3 py-2 focus:ring-2 focus:ring-indigo-500 outline-none" />
    <i class="fa fa-search absolute left-3 top-3 text-gray-400"></i> %>
  </div>

  <!-- Right -->
  <div class="flex items-center gap-6">
    <!-- Wallet Balance -->
      <h4 class="text-xl font-bold text-yellow-700">
      <%= @balance.round(2) %>
    </h4>

    <!-- Notification -->
    <button>
      <i class="fa fa-bell text-gray-600"></i>
    </button>

    <!-- Admin Dropdown -->
          <div data-action="click@window->dropdown#close" class="relative">
            <button data-action="click->dropdown#toggle" class="flex items-center gap-2 focus:outline-none">
              <div class="w-8 h-8 rounded-full bg-indigo-600 text-white flex items-center justify-center">M</div>
              <span class="font-medium">SuperAdmin</span>
              <i class="fa fa-chevron-down text-gray-500"></i>
            </button>

            <!-- Dropdown Menu -->
            <div data-dropdown-target="menu"
              class="hidden absolute right-0 mt-2 w-40 bg-white border rounded-lg shadow-lg py-2 z-50">
              <a href="/superadmin/payments/set_pin" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Set Pin</a>
      <a href="/superadmin/reset_passwords/reset_page" 
         data-turbo="false" 
         class="block px-4 py-2 text-gray-700 hover:bg-gray-100">
        Reset Password
      </a>
        <%= button_to "Logout", superadmin_sessions_destroy_path,
            method: :delete,
            data: { turbo: false },
            class: "w-full text-left px-4 py-2 text-gray-700 hover:bg-gray-100" %>
      </div>
    </div>
  </div>
</header>
