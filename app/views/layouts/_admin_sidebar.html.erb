<aside class="w-80 bg-indigo-700 text-white flex flex-col" data-controller="superadmindropdown">
  <div class="p-4 text-2xl font-bold border-b border-indigo-600 flex items-center space-x-2">
    <%= image_tag "logo.png", alt: "Logo", class: "h-11 w-auto bg-white rounded-full" %>
    <span>Admin Portal</span>
  </div>
  <nav class="flex-1 p-4 space-y-2 overflow-y-auto">
    <a href="/admin/dashboards/index" class="flex text-lg font-medium items-center gap-3 px-3 py-2 rounded-lg hover:bg-indigo-600"><i class="fa fa-home"></i> Home</a>
    <a href="/admin/dashboards/index" class="flex text-lg font-medium items-center gap-3 px-3 py-2 rounded-lg hover:bg-indigo-600"><i class="fa fa-envelope-open"></i>Admin</a>
