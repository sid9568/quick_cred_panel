      <button 
        class="flex items-center gap-3 text-lg font-medium px-3 py-2 rounded-lg hover:bg-indigo-600 w-full"
        data-action="click->superadmindropdown#paymenttoggle">
        <i class="fa fa-credit-card"></i>
        <span>Payment</span>
        <i class="fa fa-caret-down ml-36"></i>
      </button>

      <div data-superadmindropdown-target="payment" class="mt-1 space-y-1 pl-8 hidden">
        <a href="/superadmin/admins/new" class="block px-3 py-2 text-lg font-medium rounded-md hover:bg-indigo-500">
          Set Commission
        </a>
        <a href="/superadmin/payments/index" class="block px-3 py-2 text-lg font-medium rounded-md hover:bg-indigo-500">
          Create
        </a>
        <a href="/admin/payments/index" class="block px-3 py-2 text-lg font-medium rounded-md hover:bg-indigo-500">
