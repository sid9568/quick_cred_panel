<div class="flex items-center justify-center min-h-screen bg-gray-50"
     data-controller="flash pin-otp"
     data-action="submit->pin-otp#beforeSubmit">
  <div class="bg-white p-8 rounded-xl shadow-lg w-96">

    <h2 class="text-2xl font-semibold text-center text-indigo-600 mb-6">
      Verify OTP
    </h2>

    <!-- ✅ Flash Message -->
    <% if flash[:notice].present? %>
      <div data-flash-target="message"
           class="mb-4 bg-green-100 border border-green-400 text-green-700 px-4 py-2 rounded-lg text-center">
        <%= flash[:notice] %>
      </div>
    <% elsif flash[:alert].present? %>
      <div data-flash-target="message"
           class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-2 rounded-lg text-center">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_with url: superadmin_payments_verify_mpin_otp_path, method: :post, local: true, id: "otpForm" do %>
      <input type="hidden" name="email" value="<%= @user_email %>">

      <div id="otpInputs" class="flex justify-between mb-4">
        <% 6.times do %>
          <input type="text"
                 maxlength="1"
                 data-pin-otp-target="input"
                 class="w-12 h-12 text-center border border-gray-300 rounded-lg text-xl focus:outline-none focus:ring-2 focus:ring-indigo-500" />
        <% end %>
      </div>

      <!-- ✅ Hidden OTP Field -->
      <input type="hidden" name="otp" data-pin-otp-target="hiddenOtp">

      <p data-pin-otp-target="error" class="text-red-500 text-center mb-3 text-sm"></p>

      <button
        type="submit"
        class="w-full bg-indigo-600 text-white py-2 rounded-lg hover:bg-indigo-700 transition">
        Submit OTP
      </button>
    <% end %>

    <p class="text-center text-sm text-gray-500 mt-4">
      Didn’t receive OTP?
      <a href="#" class="text-indigo-600 hover:underline">Resend</a>
    </p>
  </div>
</div>
