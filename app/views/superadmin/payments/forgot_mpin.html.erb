<div class="flex items-center justify-center min-h-screen bg-gray-50"
     data-controller="flash">
  <div class="bg-white rounded-2xl shadow-xl w-full max-w-xl p-8 mb-10">
    <div class="flex items-center justify-center mb-4">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-orange-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c.828 0 1.5.672 1.5 1.5S12.828 14 12 14s-1.5-.672-1.5-1.5S11.172 11 12 11zm0-7a4 4 0 014 4v2H8V8a4 4 0 014-4zM6 10h12a2 2 0 012 2v7a2 2 0 01-2 2H6a2 2 0 01-2-2v-7a2 2 0 012-2z" />
      </svg>
      <h2 class="text-2xl font-semibold text-gray-800">Forgot Transaction PIN</h2>
    </div>

    <!-- âœ… Flash Message -->
    <% if flash[:notice].present? %>
      <div data-flash-target="message"
           class="mb-4 bg-green-100 border border-green-400 text-green-700 px-4 py-2 rounded-lg text-center">
        <%= flash[:notice] %>
      </div>
    <% elsif flash[:alert].present? %>
      <div data-flash-target="message"
           class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-2 rounded-lg text-center">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <!-- Forgot Password Form -->
    <%= form_with url: superadmin_payments_send_mpin_otp_path, method: :post, local: true, data: { turbo: false } do |f| %>
          <div id="step1" class="space-y-4">
            <%= f.email_field :email,
              required: true,
              placeholder: "Enter your email",
              class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500 outline-none"
            %>

            <%= f.submit "Send OTP",
              class: "w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition font-medium"
            %>
          </div>
        <% end %>
        <p class="text-center text-sm text-gray-600 mt-4">
          Remember your old PIN?
          <a href="<%=root_path%>" class="text-blue-600 hover:underline">Go Back</a>
        </p>

  </div>
</div>
