<div class="mt-6 px-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Category List</h1>
    <a href="<%=new_superadmin_category_path(service_id: @service_id)%>"
       class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
      Add Category
    </a>
  </div>

  <!-- Table Container -->
  <div class="overflow-x-auto bg-white shadow-md rounded-lg">
    <table class="w-full text-sm text-left text-gray-600">
      <thead class="text-xs uppercase bg-gray-100 text-gray-700">
        <tr>
          <th scope="col" class="px-6 py-3">ID</th>
          <th scope="col" class="px-6 py-3">Category Name</th>
          <th scope="col" class="px-6 py-3">Service</th>
          <th scope="col" class="px-6 py-3 text-center">Actions</th>
        </tr>
      </thead>
      <tbody>
        <%@categories.each do |cat|%>
        <tr class="bg-white border-b hover:bg-gray-50">
          <td class="px-6 py-4 font-medium text-gray-900"><%=cat.id%></td>
          <td class="px-6 py-4"><%=cat.title%></td>
          <td class="px-6 py-4">Service</td>
          <td class="flex px-6 py-4 justify-center gap-2">
              <a href="<%= superadmin_service_products_path(category_id: cat.id) %>" 
                 class="px-3 py-1 text-sm font-medium text-white bg-green-500 rounded-lg hover:bg-green-600 transition">
                View Service prodcut
              </a>
            <a href="<%= edit_superadmin_category_path(id: cat, service_id: @service_id) %>" 
                 class="px-3 py-1 text-sm font-medium text-white bg-yellow-500 rounded-lg hover:bg-yellow-600 transition">
                Edit
              </a>
          <%= button_to "Delete", superadmin_category_path(cat, service_id: @service_id), 
              method: :delete, 
              data: { turbo_confirm: "Are you sure you want to delete this category?" }, 
              class: "px-3 py-1 text-sm font-medium text-white bg-red-500 rounded-lg hover:bg-red-600 transition" %>

          </td>
        </tr>
        <%end%>
      </tbody>
    </table>
  </div>
</div>
