<div class="w-full  mx-auto px-6 py-12 bg-blue-50">

<h2 class="flex items-center justify-center text-2xl font-bold text-blue-500">Admin Onboard</h2>

<%= form_with model: @retailer,
              url: superadmin_admins_create_path,
              local: true,
              data: { controller: "form-validation" } do |form| %>

  <div class="mx-auto w-[1000px] bg-white shadow-lg rounded-lg p-6 border border-gray-200 mt-10">

    <!-- Step Indicator -->
    <div class="mb-6 text-center">
      <p class="text-sm text-gray-600">
        Step <span id="step-indicator">1</span> of 6
      </p>
    </div>

    <!-- STEP 1 -->
    <div data-form-validation-target="step">
      <h2 class="flex items-center text-lg font-semibold text-indigo-600 mb-6">
        Personal Information
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- First Name -->
        <div>
          <label class="block text-sm font-medium text-gray-700">
            First Name <span class="text-red-500">*</span>
          </label>
          <input type="text" name="user[first_name]" placeholder="Enter First Name"
            required
            class="mt-1 block w-full rounded-md border border-gray-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm p-3" />
        </div>

        <!-- Last Name -->
        <div>
          <label class="block text-sm font-medium text-gray-700">Last Name</label>
          <input type="text" name="user[last_name]" placeholder="Enter Last Name"
            class="mt-1 block w-full rounded-md border border-gray-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm p-3" />
        </div>

        <!-- Email -->
        <div>
          <label class="block text-sm font-medium text-gray-700">Email Address <span class="text-red-500">*</span></label>
          <div class="flex items-center mt-1 border border-gray-200 rounded-md shadow-sm">
            <span class="px-3 text-purple-500"><i class='fa fa-envelope'></i></span>
            <input type="email" name="user[email]" placeholder="Enter Email"
              required class="w-full focus:ring-0 text-sm p-3" />
          </div>
        </div>

        <!-- Phone -->
        <div>
          <label class="block text-sm font-medium text-gray-700">Phone Number <span class="text-red-500">*</span></label>
          <div class="flex items-center mt-1 border border-gray-200 rounded-md shadow-sm">
            <span class="px-3 text-purple-500"><i class='fa-solid fa-phone'></i></span>
            <input type="text" name="user[phone_number]" placeholder="Enter Phone"
              required class="w-full focus:ring-0 text-sm p-3" />
          </div>
        </div>

        <!-- Alternate Phone -->
        <div>
          <label class="block text-sm font-medium text-gray-700">Alternate Phone</label>
          <input type="text" name="user[alternative_number]" placeholder="Enter Alternate Phone"
            class="mt-1 block w-full rounded-md border border-gray-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm p-3" />
        </div>

        <!-- Aadhar -->
        <div>
          <label class="block text-sm font-medium text-gray-700">Aadhar Number <span class="text-red-500">*</span></label>
          <input type="text" name="user[aadhaar_number]" placeholder="Enter Aadhar Number"
            required class="mt-1 block w-full rounded-md border border-gray-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm p-3" />
        </div>

        <!-- PAN -->
        <div>
          <label class="block text-sm font-medium text-gray-700">PAN Number <span class="text-red-500">*</span></label>
          <input type="text" name="user[pan_card]" placeholder="Enter PAN Number"
            required class="mt-1 block w-full rounded-md border border-gray-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm p-3" />
        </div>

        <!-- DOB -->
        <div>
          <label class="block text-sm font-medium text-gray-700">Date of Birth <span class="text-red-500">*</span></label>
          <input type="date" name="user[date_of_birth]" required
            class="mt-1 block w-full rounded-md border border-gray-200 shadow-sm text-sm p-3" />
        </div>

        <!-- Gender -->
        <div>
          <label class="block text-sm font-medium text-gray-700">Gender</label>
          <select name="user[gender]" class="mt-1 block w-full rounded-md border border-gray-200 shadow-sm text-sm p-3" required>
            <option value="">Select gender</option>
            <option>Male</option>
            <option>Female</option>
            <option>Other</option>
          </select>
        </div>

        <!-- Role -->
        <div>
          <label class="block text-sm font-medium text-gray-700">Role</label>
          <select name="user[role_id]" required
            class="mt-1 block w-full rounded-md border border-gray-200 shadow-sm text-sm p-3">
            <option value="">Select Role</option>
            <% Role.where(title: "admin").each do |role| %>
              <option value="<%= role.id %>"><%= role.title %></option>
            <% end %>
          </select>
        </div>
      </div>

      <div class="flex justify-end mt-6">
        <button data-action="form-validation#next" type="button"
          class="px-6 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700">
          Next →
        </button>
      </div>
    </div>


    <!-- STEP 2 -->
    <div class="hidden" data-form-validation-target="step">
      <h2 class="flex items-center text-lg font-semibold text-indigo-600 mb-6">Business Information</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

      <div>
        <label class="block text-sm font-medium text-gray-700">Business Name</label>
        <input type="text" name="user[business_name]" placeholder="Enter Street Address"
          class="mt-1 w-full rounded-md border border-gray-300 p-3 text-sm shadow-sm" />
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700">Business Ownership Type</label>
        <input type="text" name="user[business_owner_type]" placeholder="Enter City"
          class="mt-1 w-full rounded-md border border-gray-300 p-3 text-sm shadow-sm" />
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700">Business Nature Type</label>
        <input type="text" name="user[business_nature_type]" placeholder="Enter State"
          class="mt-1 w-full rounded-md border border-gray-300 p-3 text-sm shadow-sm" />
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700">Business Registration Number</label>
        <input type="text" name="user[business_registration_number]" placeholder="Enter Zip Code"
          class="mt-1 w-full rounded-md border border-gray-300 p-3 text-sm shadow-sm" />
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700">GST Number</label>
        <input type="text" name="user[gst_number]" placeholder="Enter Zip Code"
          class="mt-1 w-full rounded-md border border-gray-300 p-3 text-sm shadow-sm" />
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700">Domin Name</label>
        <input type="text" name="user[domain_name]" placeholder="Enter Domin Name"
          class="mt-1 w-full rounded-md border border-gray-300 p-3 text-sm shadow-sm" />
      </div>
    </div>
    

     <div class="flex justify-between mt-6">
        <button data-action="form-validation#back" class="px-6 py-2 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400">← Back</button>
        <button data-action="form-validation#next" class="px-6 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700">Next →</button>
      </div>
      </div>


     <!-- STEP 3 -->
    <div class="hidden" data-form-validation-target="step">
      <h2 class="flex items-center text-lg font-semibold text-indigo-600 mb-6">Address Information</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

        <div>
        <label class="block text-sm font-medium text-gray-700">Address</label>
        <input type="text" name="user[address]" placeholder="Enter Street Address"
          class="mt-1 w-full rounded-md border border-gray-300 p-3 text-sm shadow-sm" />
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700">City</label>
        <input type="text" name="user[city]" placeholder="Enter City"
          class="mt-1 w-full rounded-md border border-gray-300 p-3 text-sm shadow-sm" />
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700">State</label>
        <input type="text" name="user[state]" placeholder="Enter State"
          class="mt-1 w-full rounded-md border border-gray-300 p-3 text-sm shadow-sm" />
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700">Pincode</label>
        <input type="text" name="user[pincode]" placeholder="Enter Zip Code"
          class="mt-1 w-full rounded-md border border-gray-300 p-3 text-sm shadow-sm" />
      </div>
      <div class="md:col-span-2">
      <label class="block text-sm font-medium text-gray-700">
        Select State
      </label>
      <select
        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm p-3 border border-gray-200">
        <option>Andhra Pradesh</option>
        <option>UP</option>
        <option>Delhi</option>
        <option>Mp</option>
      </select>
    </div>

   </div>

   <div class="flex justify-between mt-6">
        <button data-action="form-validation#back" class="px-6 py-2 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400">← Back</button>
        <button data-action="form-validation#next" type="button" class="px-6 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700">Next →</button>
      </div>
    </div>
 


        <!-- STEP 4 -->
    <div class="hidden" data-form-validation-target="step">
      <h2 class="flex items-center text-lg font-semibold text-indigo-600 mb-6">Account Information</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
         <div>
        <label class="block text-sm font-medium text-gray-700">Username</label>
        <input type="text" name="user[username]" placeholder="Enter Street Address"
          class="mt-1 w-full rounded-md border border-gray-300 p-3 text-sm shadow-sm" />
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700">Password</label>
        <input type="text" name="user[password]" placeholder="Enter City"
          class="mt-1 w-full rounded-md border border-gray-300 p-3 text-sm shadow-sm" required />
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700">Confirm Password</label>
        <input type="text" name="user[confirm_password]" placeholder="Enter State"
          class="mt-1 w-full rounded-md border border-gray-300 p-3 text-sm shadow-sm" required />
      </div>

      <div class="">
      <label class="block text-sm font-medium text-gray-700">
        Scheme
      </label>
     <select
          name="user[scheme_id]"
          class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm p-3 border border-gray-200" required>

          <option value="">Select Scheme</option>
          <% Scheme.all.each do |sch| %>
            <option value="<%= sch.id %>"><%= sch.scheme_name %></option>
          <% end %>
        </select>

     </div>
       <div>
        <label class="block text-sm font-medium text-gray-700">Referred By</label>
        <input type="text" name="user[referred_by]" placeholder="Enter Zip Code"
          class="mt-1 w-full rounded-md border border-gray-300 p-3 text-sm shadow-sm" />
      </div>
    </div>

      <div class="flex justify-between mt-6">
        <button data-action="form-validation#back" class="px-6 py-2 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400">← Back</button>
        <button data-action="form-validation#next" class="px-6 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700">Next →</button>
      </div>
    </div>


     <!-- STEP 5 -->
    <div class="hidden" data-form-validation-target="step">
      <h2 class="flex items-center text-lg font-semibold text-indigo-600 mb-6">Bank Details & Information</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
         <div>
        <label class="block text-sm font-medium text-gray-700">Bank Name</label>
        <input type="text" name="user[bank_name]" placeholder="Enter Street Address"
          class="mt-1 w-full rounded-md border border-gray-300 p-3 text-sm shadow-sm" />
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700">Account Number</label>
        <input type="text" name="user[account_number]" placeholder="Enter City"
          class="mt-1 w-full rounded-md border border-gray-300 p-3 text-sm shadow-sm" />
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700">IFSC Code</label>
        <input type="text" name="user[ifsc_code]" placeholder="Enter State"
          class="mt-1 w-full rounded-md border border-gray-300 p-3 text-sm shadow-sm" />
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700">Account Holder Name</label>
        <input type="text" name="user[account_holder_name]" placeholder="Enter Zip Code"
          class="mt-1 w-full rounded-md border border-gray-300 p-3 text-sm shadow-sm" />
      </div>
      
      <div class="md:col-span-2">
      <label class="block text-sm font-medium text-gray-700">
        Select State
      </label>
      <select
        name="account_holder_name"
        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm p-3 border border-gray-200">
        <option>Andhra Pradesh</option>
        <option>UP</option>
        <option>Delhi</option>
        <option>Mp</option>
      </select>
    </div>
    </div>

      <div class="flex justify-between mt-6">
        <button data-action="form-validation#back" class="px-6 py-2 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400">← Back</button>
        <button data-action="form-validation#next" type="button" class="px-6 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700">Next →</button>
      </div>
    </div>


     <!-- STEP 6 -->
    <div class="hidden" data-form-validation-target="step">
      <h2 class="flex items-center text-lg font-semibold text-indigo-600 mb-6">Service</h2>

      <div class="space-y-2">
        <% Service.all.each do |service| %>
          <div class="flex items-center space-x-2">
            <%= check_box_tag "user[service_ids][]", service.id, false,
              id: "service_#{service.id}", class: "w-4 h-4" %>
            <%= label_tag "service_#{service.id}", service.title.capitalize, class: "text-gray-600 font-medium" %>
          </div>
        <% end %>
      </div>

      <div class="flex justify-between mt-6">
        <button data-action="form-validation#back" class="px-6 py-2 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400">← Back</button>
        <%= form.submit "Submit", class: "px-6 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700" %>
      </div>
    </div>

<%end%>

</div>
</div>