<div class="min-h-screen bg-gradient-to-b from-blue-50 to-white p-6">

  <a href="<%= superadmin_dmt_commissions_path %>"
     class="inline-flex items-center gap-2 text-gray-600 hover:text-blue-600 mb-6">
    ‚Üê Back
  </a>

  <div class="max-w-6xl mx-auto bg-white rounded-2xl shadow-xl overflow-hidden">

    <div class="bg-gradient-to-r from-yellow-600 to-yellow-700 px-6 py-8">
      <h1 class="text-3xl font-bold text-white">Edit Commission Slab</h1>
      <p class="text-yellow-100 mt-1">
        Update DMT commission configuration
      </p>
    </div>

    <%= form_with model: @commission_slab,
          url: superadmin_dmt_commission_path(@commission_slab),
          method: :patch,
          local: true,
          class: "p-6 md:p-8 space-y-10" do |f| %>

      <!-- Scheme -->
      <div>
        <label class="block text-sm font-medium mb-2">Scheme</label>
        <%= f.select :scheme_id,
              @schemes.map { |s| [s.scheme_name, s.id] },
              {},
              class: "w-full px-4 py-3 border rounded-lg" %>
      </div>

      <!-- Amount Range -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label class="block text-sm font-medium mb-2">Min Amount</label>
          <%= f.number_field :min_amount, step: 0.01,
                class: "w-full px-4 py-3 border rounded-lg" %>
        </div>

        <div>
          <label class="block text-sm font-medium mb-2">Max Amount</label>
          <%= f.number_field :max_amount, step: 0.01,
                class: "w-full px-4 py-3 border rounded-lg" %>
        </div>
      </div>

      <!-- Charges -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div>
          <label class="block text-sm font-medium mb-2">Commission (%)</label>
          <%= f.number_field :value, step: 0.01,
                class: "w-full px-4 py-3 border rounded-lg" %>
        </div>

        <div>
          <label class="block text-sm font-medium mb-2">Surcharge</label>
          <%= f.number_field :surcharge, step: 0.01,
                class: "w-full px-4 py-3 border rounded-lg" %>
        </div>

        <div>
          <label class="block text-sm font-medium mb-2">GST (%)</label>
          <%= f.number_field :gst_percent, step: 0.01,
                class: "w-full px-4 py-3 border rounded-lg" %>
        </div>

        <div>
          <label class="block text-sm font-medium mb-2">TDS (%)</label>
          <%= f.number_field :tds_percent, step: 0.01,
                class: "w-full px-4 py-3 border rounded-lg" %>
        </div>
      </div>

      <!-- Actions -->
      <div class="flex justify-between pt-6 border-t">
        <%= link_to "Cancel",
              superadmin_dmt_commissions_path,
              class: "px-6 py-3 border rounded-lg text-gray-700 hover:bg-gray-50" %>

        <%= f.submit "Update Commission",
              class: "px-8 py-3 bg-yellow-600 text-white rounded-lg hover:bg-yellow-700 shadow-lg" %>
      </div>

    <% end %>
  </div>
</div>
