<div class="min-h-screen bg-gradient-to-b from-blue-50 to-white p-6">

  <!-- Back -->
  <a href="<%= superadmin_dmt_commissions_index_path %>"
     class="inline-flex items-center gap-2 text-gray-600 hover:text-blue-600 mb-6">
    ‚Üê Back to Schemes
  </a>

  <!-- Card -->
  <div class="max-w-6xl mx-auto bg-white rounded-2xl shadow-xl overflow-hidden">

    <!-- Header -->
    <div class="bg-gradient-to-r from-yellow-600 to-yellow-700 px-6 py-8">
      <h1 class="text-3xl font-bold text-white">Create New Commission Scheme</h1>
      <p class="text-yellow-100 mt-1">
        Configure commission distribution for DMT transactions
      </p>
    </div>

    <!-- FORM -->
    <%= form_with model: @commission_slab,
                  url: superadmin_dmt_commissions_path,
                  method: :post,
                  local: true,
                  class: "p-6 md:p-8 space-y-10" do |f| %>

      <!-- BASIC INFO -->
      <div>
        <h2 class="text-xl font-bold text-gray-900 mb-6">Basic Information</h2>

        <div class="grid grid-cols-1 gap-6">

          <!-- Scheme -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Scheme Name *
            </label>

            <%= f.select :scheme_id,
                  @schemes.map { |s| [s.scheme_name, s.id] },
                  { prompt: "Select Plan" },
                  class: "w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-blue-500",
                  required: true %>
          </div>

          <!-- Amount Range -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Amount Min Range From *
              </label>
              <%= f.number_field :min_amount,
                    step: 0.01,
                    placeholder: "0.00",
                    class: "w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-blue-500",
                    required: true %>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Amount Max Range To *
              </label>
              <%= f.number_field :max_amount,
                    step: 0.01,
                    placeholder: "0.00",
                    class: "w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-blue-500",
                    required: true %>
            </div>

          </div>
        </div>
      </div>

      <!-- SURCHARGE / GST / TDS -->
      <div>
        <h2 class="text-xl font-bold text-gray-900 mb-6">
          Surcharge, GST & TDS
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Surcharge
            </label>
            <%= f.number_field :surcharge,
                  step: 0.01,
                  placeholder: "0.00",
                  class: "w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-blue-500" %>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              TDS (%)
            </label>
            <%= f.number_field :tds_percent,
                  step: 0.01,
                  placeholder: "0.00",
                  class: "w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-blue-500" %>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              GST (%)
            </label>
            <%= f.number_field :gst_percent,
                  step: 0.01,
                  placeholder: "0.00",
                  class: "w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-blue-500" %>
          </div>

        </div>
      </div>

      <!-- COMMISSION -->
      <div>
        <h2 class="text-xl font-bold text-gray-900 mb-6">
          Commission Distribution (%)
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Admin %
            </label>
            <%= f.number_field :value,
                  step: 0.01,
                  placeholder: "0.00",
                  class: "w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-blue-500" %>
          </div>

        </div>

        <p class="text-sm text-gray-500 mt-4">
          Super Admin percentage will be calculated automatically.
        </p>
      </div>

      <!-- ACTIONS -->
      <div class="flex justify-between pt-6 border-t">

        <a href="<%= superadmin_dmt_commissions_index_path %>"
           class="px-6 py-3 border rounded-lg text-gray-700 hover:bg-gray-50">
          Cancel
        </a>

        <%= f.submit "Create Scheme",
              class: "px-8 py-3 bg-gradient-to-r from-yellow-600 to-yellow-700
                      text-white rounded-lg hover:from-yellow-700 hover:to-yellow-800
                      shadow-lg" %>

      </div>

    <% end %>
  </div>
</div>
