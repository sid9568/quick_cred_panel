<div class="min-h-screen bg-gray-50 p-6">

  <!-- Header -->
  <div class="flex justify-between items-start">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 mb-2">
        DMT Commission Schemes
      </h1>
      <p class="text-gray-600 mb-8">
        Manage and configure commission distribution for DMT transactions
      </p>
    </div>

    <div class="mt-3">
      <%= link_to superadmin_dmt_commissions_new_path,
        class: "px-6 py-3 bg-yellow-600 text-white rounded-lg hover:bg-yellow-700 transition inline-flex items-center gap-2" do %>
        ➕ Create Dmt Commission
      <% end %>
    </div>
  </div>

  <!-- TABLE -->
  <div class="max-w-[1460px] mx-auto bg-white rounded-xl shadow-md overflow-hidden mt-6">

    <table class="min-w-full border-collapse">
      <thead>
        <tr class="bg-yellow-100 text-gray-800 text-sm font-semibold">
          <th class="px-6 py-4 text-left">RANGE</th>
          <th class="px-6 py-4 text-left">COMMISSION TYPE</th>
          <th class="px-6 py-4 text-left">ADMIN</th>
          <th class="px-6 py-4 text-left">SURCHARGE</th>
          <th class="px-6 py-4 text-left">GST</th>
          <th class="px-6 py-4 text-left">TDS</th>
          <th class="px-6 py-4 text-left">ACTIONS</th>
        </tr>
      </thead>

      <tbody>
        <% @commission_slabs.each do |commission| %>
          <tr class="border-b hover:bg-gray-50 transition">

            <!-- Range -->
            <td class="px-6 py-4">
              <p class="font-semibold text-gray-900">
                <%= commission.min_amount %> – <%= commission.max_amount %>
              </p>
            </td>

            <!-- Type -->
            <td class="px-6 py-4 text-gray-700">
              Commission
            </td>

            <!-- Admin -->
            <td class="px-6 py-4 text-gray-700">
              <%= commission.value %> %
            </td>

            <!-- Surcharge -->
            <td class="px-6 py-4 text-gray-700">
              <%= commission.surcharge %>
            </td>

            <!-- GST -->
            <td class="px-6 py-4 text-gray-700">
              <%= commission.gst_percent %> %
            </td>

            <!-- TDS -->
            <td class="px-6 py-4 text-gray-700">
              <%= commission.tds_percent %> %
            </td>

            <!-- Actions -->
            <td class="px-6 py-4">
              <%= link_to "✏️ Edit",
                edit_superadmin_dmt_commission_path(commission),
                class: "bg-orange-500 hover:bg-orange-600 text-white px-4 py-2 rounded-lg shadow inline-flex items-center gap-2 text-sm" %>
            </td>

          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>
