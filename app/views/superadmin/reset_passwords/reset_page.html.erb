<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Reset Password</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://unpkg.com/lucide@latest"></script>
</head>

<body class="min-h-screen flex items-center justify-center bg-gray-50">

  <div class="bg-white rounded-2xl shadow-lg w-full max-w-lg p-8 m-auto">
    <h2 class="text-3xl font-semibold text-center text-gray-800 mb-6">
      üîí Reset Password
    </h2>

    <p class="text-sm text-gray-600 text-center mb-4">
      Enter your old and new password to reset your account.
    </p>

    <%= form_with url: superadmin_reset_passwords_reset_password_path, method: :post, local: true, id: "resetForm", class: "space-y-4" do |f| %>

      <!-- Old Password -->
      <label class="text-sm font-medium text-gray-700">
        Old Password <span class="text-red-600">*</span>
      </label>
      <div class="relative">
        <%= f.password_field :old_password,
          id: "old_password",
          placeholder: "Enter Old Password",
          required: true,
          class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-indigo-500 outline-none"
        %>
        <button type="button" onclick="togglePassword('old_password', this)" class="absolute right-3 top-3 text-gray-600">
          <i data-lucide="eye"></i>
        </button>
      </div>

      <!-- New Password -->
      <label class="text-sm font-medium text-gray-700">
        New Password <span class="text-red-600">*</span>
      </label>
      <div class="relative">
        <%= f.password_field :password,
          id: "password",
          placeholder: "Enter New Password",
          required: true,
          oninput: "validatePassword()",
          class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-indigo-500 outline-none"
        %>
        <button type="button" onclick="togglePassword('password', this)" class="absolute right-3 top-3 text-gray-600">
          <i data-lucide="eye"></i>
        </button>
      </div>

      <!-- Confirm Password -->
      <label class="text-sm font-medium text-gray-700">
        Confirm Password <span class="text-red-600">*</span>
      </label>
      <div class="relative">
        <%= f.password_field :password_confirmation,
          id: "confirm_password",
          placeholder: "Confirm New Password",
          required: true,
          oninput: "validatePassword()",
          class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-indigo-500 outline-none"
        %>
        <button type="button" onclick="togglePassword('confirm_password', this)" class="absolute right-3 top-3 text-gray-600">
          <i data-lucide="eye"></i>
        </button>
      </div>

      <!-- Live password rule indication -->
      <div class="text-xs space-y-1 mt-2">
        <p id="rule-length" class="text-red-600">‚Ä¢ Minimum 8 characters</p>
        <p id="rule-uppercase" class="text-red-600">‚Ä¢ One uppercase (A-Z)</p>
        <p id="rule-lowercase" class="text-red-600">‚Ä¢ One lowercase (a-z)</p>
        <p id="rule-number" class="text-red-600">‚Ä¢ One number (0-9)</p>
        <p id="rule-special" class="text-red-600">‚Ä¢ One special character (@$!%*?&#)</p>
        <p id="rule-match" class="text-red-600">‚Ä¢ Passwords must match</p>
      </div>

      <%= f.submit "Reset Password",
        id: "submitBtn",
        disabled: true,
        class: "w-full text-white py-2 rounded-lg transition font-medium bg-gray-400 cursor-not-allowed"
      %>

      <p class="text-center text-sm text-gray-500 mt-2">
        Forgot old password?
        <%= link_to "Click here", superadmin_sessions_forgot_page_path, class: "text-blue-600 hover:underline" %>
      </p>
    <% end %>
  </div>

  <script>
    lucide.createIcons();

    function togglePassword(id, button) {
      const input = document.getElementById(id);
      const icon = button.querySelector("i");

      if (input.type === "password") {
        input.type = "text";
        icon.setAttribute("data-lucide", "eye-off");
      } else {
        input.type = "password";
        icon.setAttribute("data-lucide", "eye");
      }
      lucide.createIcons();
    }

    function validatePassword() {
      const password = document.getElementById("password").value;
      const confirm = document.getElementById("confirm_password").value;
      const submitBtn = document.getElementById("submitBtn");

      const rules = {
        length: password.length >= 8,
        uppercase: /[A-Z]/.test(password),
        lowercase: /[a-z]/.test(password),
        number: /[0-9]/.test(password),
        special: /[@$!%*?&#]/.test(password),
        match: password === confirm && password !== "",
      };

      for (let key in rules) {
        const element = document.getElementById(`rule-${key}`);
        element.classList.toggle("text-green-600", rules[key]);
        element.classList.toggle("text-red-600", !rules[key]);
      }

      const allValid = Object.values(rules).every(Boolean);

      if (allValid) {
        submitBtn.disabled = false;
        submitBtn.classList.remove("bg-gray-400", "cursor-not-allowed");
        submitBtn.classList.add("bg-indigo-600", "hover:bg-indigo-700");
      } else {
        submitBtn.disabled = true;
        submitBtn.classList.add("bg-gray-400", "cursor-not-allowed");
        submitBtn.classList.remove("bg-indigo-600", "hover:bg-indigo-700");
      }
    }

    document.getElementById("resetForm").addEventListener("submit", (e) => {
      const oldPass = document.getElementById("old_password").value;
      const newPass = document.getElementById("password").value;

      if (oldPass === newPass) {
        e.preventDefault();
        alert("‚ùå New Password cannot be same as Old Password.");
      }
    });
  </script>

</body>
</html>
