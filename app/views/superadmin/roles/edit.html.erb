<div class="mt-6 px-8 max-w-lg">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Edit Role</h1>
  </div>

  <!-- Edit Role Form -->
  <div class="bg-white shadow-md rounded-lg p-6">
    <%= form_with(model: @role, url: superadmin_role_path(@role), method: :patch, local: true) do |f| %>
      <div class="mb-4">
        <%= f.label :title, "title", class: "block text-gray-700 mb-2" %>
        <%= f.text_field :title, class: "w-full px-3 py-2 border rounded-lg", value: @role.title %>
      </div>

      <div class="flex justify-end">
        <%= link_to "Cancel", superadmin_roles_path, class: "mr-2 px-4 py-2 border rounded-lg hover:bg-gray-100" %>
        <%= f.submit "Update Role", class: "px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700" %>
      </div>
    <% end %>
  </div>
</div>
