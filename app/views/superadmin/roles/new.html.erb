<div class="flex items-center justify-center bg-gradient-to-br from-white via-gray-50 to-gray-200 px-2 h-screen">
  <div class="max-w-lg w-full drop-shadow-2xl rounded-2xl">
    <div class="flex justify-between items-center mb-4">
      <h1 class="text-2xl font-bold text-indigo-700 tracking-wide">Add New Role:</h1>
    </div>

    <!-- Role Form -->
    <div class="bg-white/90 shadow-lg rounded-xl p-8 w-full border border-gray-100">
      <%= form_with(model: @role, url: superadmin_roles_path, local: true) do |f| %>
        <div class="mb-6">
          <%= f.label :title, "Title", class: "block text-gray-700 mb-2 font-semibold" %>
          <%= f.text_field :title, class: "w-full px-3 py-2 border border-gray-200 rounded-lg focus:ring-2 focus:ring-indigo-200 bg-gray-50 transition" %>
        </div>

        <div class="flex justify-end">
          <%= link_to "Cancel", superadmin_roles_path, class: "mr-3 px-4 py-2 border border-gray-300 rounded-lg bg-gray-100 hover:bg-gray-200 text-gray-600 font-medium transition" %>
          <%= f.submit "Create Role", class: "px-5 py-2 bg-yellow-600 hover:bg-yellow-700 text-white rounded-lg shadow-lg font-semibold transition" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
