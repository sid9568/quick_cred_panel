<div class="min-h-screen bg-slate-100 p-6">
  <div class="max-w-6xl mx-auto bg-white rounded-2xl shadow-lg overflow-hidden">

    <!-- üî∂ HEADER -->
    <div class="bg-gradient-to-r from-yellow-600 to-yellow-700 px-8 py-6">
      <h1 class="text-2xl font-bold text-white">
        Create BBPS and Recharge & DTH Commission Commission
      </h1>
      <p class="text-yellow-100 mt-1 text-sm">
        Configure commission distribution for BBPS and Recharge & DTH Commission transactions
      </p>
    </div>

    <!-- üî∂ FORM BODY -->
    <div class="p-8 space-y-10">

      <!-- FIX: Changed URL to superadmin_commissions_path for correct POST route -->
      <%= form_with url: superadmin_commissions_path,
            method: :post,
            local: true,
            class: "space-y-10" do |f| %>

        <%= hidden_field_tag :id, @service_id %>
        <!-- FIX: Added hidden field to store final scheme_id -->
        <%= hidden_field_tag :final_scheme_id, params[:scheme_id], id: "finalSchemeId" %>

        <!-- ================= BASIC INFORMATION ================= -->
        <div>
          <h2 class="text-lg font-semibold text-gray-900 mb-6">
            Basic Information
          </h2>

          <div class="space-y-6">

            <!-- CATEGORY -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">
                Select Scheme <span class="text-red-500">*</span>
              </label>

              <!-- FIX: Added onchange to update hidden field with scheme_id -->
              <%= select_tag :scheme_id,
                    options_from_collection_for_select(
                      @schemes,
                      :id,
                      :scheme_name,
                      params[:scheme_id]
                    ),
                    prompt: "Select Scheme",
                    class: "w-full rounded-lg border px-4 py-2.5",
                    onchange: "document.getElementById('finalSchemeId').value = this.value;" %>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">
                Category <span class="text-red-500">*</span>
              </label>

              <%= select_tag :category_id,
                    options_from_collection_for_select(@categories, :id, :title, @category_id),
                    prompt: "Select Category",
                    class: "w-full rounded-lg border border-gray-300 bg-gray-50
                            px-4 py-2.5 text-sm
                            focus:ring-2 focus:ring-yellow-200
                            focus:border-yellow-500",
                    onchange: "
                      this.form.action='#{superadmin_commissions_new_path}';
                      this.form.method='get';
                      this.form.submit();
                    " %>
            </div>

            <!-- SERVICE -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">
                Service <span class="text-red-500">*</span>
              </label>

              <%= select_tag :service_product_id,
                    options_from_collection_for_select(@service_products, :id, :company_name, @service_product_id),
                    prompt: "Select Service",
                    disabled: @service_products.blank?,
                    class: "w-full rounded-lg border border-gray-300 bg-gray-50
                            px-4 py-2.5 text-sm
                            disabled:bg-gray-100 disabled:cursor-not-allowed
                            focus:ring-2 focus:ring-yellow-200
                            focus:border-yellow-500",
                    onchange: "
                      this.form.action='#{superadmin_commissions_new_path}';
                      this.form.method='get';
                      this.form.submit();
                    " %>
            </div>

            <!-- OPERATOR -->
            <div class="relative">
              <label class="block text-sm font-medium text-gray-700 mb-1">
                Operator <span class="text-red-500">*</span>
              </label>

              <input
                type="text"
                id="operatorSearch"
                value="<%= params[:operator_name] %>"
                placeholder="Search operator..."
                class="w-full rounded-lg border px-4 py-2.5"
              >

              <span class="absolute right-4 top-[38px] text-gray-400 pointer-events-none">
                üîç
              </span>

              <!-- üîë ACTUAL PARAM -->
              <%= hidden_field_tag :operator_name, params[:operator_name], id: "operatorHidden" %>

              <ul
                id="operatorDropdown"
                class="absolute z-30 mt-1 w-full max-h-56 overflow-y-auto
                       rounded-lg border border-gray-200 bg-white
                       shadow-lg hidden"
              >
                <% @operators.each do |op| %>
                  <li
                    class="operator-item px-4 py-2.5 text-sm text-gray-700
                           cursor-pointer hover:bg-yellow-50
                           hover:text-yellow-700 transition"
                    data-name="<%= op['name'] %>"
                  >
                    <%= op['name'] %>
                  </li>
                <% end %>
              </ul>
            </div>

          </div>
        </div>

        <!-- ================= COMMISSION ================= -->
        <div>
          <h2 class="text-lg font-semibold text-gray-900 mb-6">
            Commission Distribution (%)
          </h2>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">
              Admin %
            </label>
            <%= f.number_field :admin_commission,
                  step: 0.01,
                  class: "w-full rounded-lg border border-gray-300
                          px-4 py-2.5 text-sm
                          focus:ring-2 focus:ring-yellow-200
                          focus:border-yellow-500" %>
          </div>
        </div>

        <!-- ================= SUBMIT ================= -->
        <div class="pt-6 border-t flex justify-end">
          <%= f.submit "Create Commission",
                class: "px-8 py-3 rounded-lg font-semibold text-white
                        bg-gradient-to-r from-yellow-600 to-yellow-700
                        hover:from-yellow-700 hover:to-yellow-800
                        shadow-md transition" %>
        </div>

      <% end %>

    </div>
  </div>
</div>

<!-- ================= JS (FIXED VERSION) ================= -->
<script>
document.addEventListener("DOMContentLoaded", () => {
  const searchInput = document.getElementById("operatorSearch");
  const dropdown = document.getElementById("operatorDropdown");
  const hiddenInput = document.getElementById("operatorHidden");
  const items = document.querySelectorAll(".operator-item");
  const form = searchInput.closest("form");
  const schemeSelect = document.getElementById("scheme_id");
  const finalSchemeId = document.getElementById("finalSchemeId");

  // Set initial value for finalSchemeId
  if (schemeSelect && finalSchemeId) {
    finalSchemeId.value = schemeSelect.value;
  }

  // Operator search functionality
  searchInput.addEventListener("focus", () => {
    dropdown.classList.remove("hidden");
  });

  searchInput.addEventListener("input", () => {
    const value = searchInput.value.toLowerCase();
    items.forEach(item => {
      item.style.display = item.dataset.name.toLowerCase().includes(value)
        ? "block"
        : "none";
    });
  });

  items.forEach(item => {
    item.addEventListener("click", () => {
      searchInput.value = item.dataset.name;
      hiddenInput.value = item.dataset.name;
      dropdown.classList.add("hidden");
    });
  });

  document.addEventListener("click", (e) => {
    if (!e.target.closest(".relative")) {
      dropdown.classList.add("hidden");
    }
  });

  // FIX: Ensure operator_name AND scheme_id are submitted
  form.addEventListener("submit", (e) => {
    // Ensure operator_name is set
    hiddenInput.value = searchInput.value.trim();
    
    // FIX: Ensure scheme_id from hidden field is used
    // Update the scheme_id field value before submission
    if (schemeSelect && finalSchemeId) {
      schemeSelect.value = finalSchemeId.value;
    }
  });

  // FIX: Update hidden field when scheme is selected
  if (schemeSelect) {
    schemeSelect.addEventListener("change", () => {
      if (finalSchemeId) {
        finalSchemeId.value = schemeSelect.value;
      }
    });
  }
});
</script>