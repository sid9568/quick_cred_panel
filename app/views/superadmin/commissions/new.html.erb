<div class="min-h-screen bg-slate-100 p-6">
  <div class="max-w-6xl mx-auto bg-white rounded-2xl shadow-lg overflow-hidden">

    <!-- üî∂ HEADER -->
    <div class="bg-gradient-to-r from-yellow-600 to-yellow-700 px-8 py-6">
      <h1 class="text-2xl font-bold text-white">
        Create BBPS and Recharge & DTH Commission Commission
      </h1>
      <p class="text-yellow-100 mt-1 text-sm">
        Configure commission distribution for BBPS and Recharge & DTH Commission transactions
      </p>
    </div>

    <!-- üî∂ FORM BODY -->
    <div class="p-8 space-y-10">

      <%= form_with url: superadmin_commissions_path,
            method: :post,
            local: true,
            class: "space-y-10" do |f| %>

        <%= hidden_field_tag :id, @service_id %>

        <!-- scheme id (final) -->
        <%= hidden_field_tag :final_scheme_id, params[:scheme_id], id: "finalSchemeId" %>

        <!-- ================= BASIC INFORMATION ================= -->
        <div>
          <h2 class="text-lg font-semibold text-gray-900 mb-6">
            Basic Information
          </h2>

          <div class="space-y-6">

            <!-- SCHEME -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">
                Select Scheme <span class="text-red-500">*</span>
              </label>

              <%= select_tag :scheme_id,
                    options_from_collection_for_select(
                      @schemes,
                      :id,
                      :scheme_name,
                      params[:scheme_id]
                    ),
                    prompt: "Select Scheme",
                    class: "w-full rounded-lg border px-4 py-2.5",
                    id: "scheme_id",
                    onchange: "document.getElementById('finalSchemeId').value = this.value;" %>
            </div>

            <!-- CATEGORY -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">
                Category <span class="text-red-500">*</span>
              </label>

              <%= select_tag :category_id,
                    options_from_collection_for_select(@categories, :id, :title, @category_id),
                    prompt: "Select Category",
                    class: "w-full rounded-lg border px-4 py-2.5",
                    onchange: "
                      this.form.action='#{superadmin_commissions_new_path}';
                      this.form.method='get';
                      this.form.submit();
                    " %>
            </div>

            <!-- SERVICE -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">
                Service <span class="text-red-500">*</span>
              </label>

              <%= select_tag :service_product_id,
                    options_from_collection_for_select(
                      @service_products,
                      :id,
                      :company_name,
                      @service_product_id
                    ),
                    prompt: "Select Service",
                    disabled: @service_products.blank?,
                    class: "w-full rounded-lg border px-4 py-2.5 disabled:bg-gray-100",
                    onchange: "
                      this.form.action='#{superadmin_commissions_new_path}';
                      this.form.method='get';
                      this.form.submit();
                    " %>
            </div>

            <!-- OPERATOR -->
            <div class="relative">
              <label class="block text-sm font-medium text-gray-700 mb-1">
                Operator <span class="text-red-500">*</span>
              </label>

              <input
                type="text"
                id="operatorSearch"
                value="<%= params[:operator_name] %>"
                placeholder="Search operator..."
                class="w-full rounded-lg border px-4 py-2.5"
              >

              <span class="absolute right-4 top-[38px] text-gray-400 pointer-events-none">
                üîç
              </span>

              <!-- HIDDEN FIELDS -->
              <%= hidden_field_tag :operator_name, params[:operator_name], id: "operatorHidden" %>
              <%= hidden_field_tag :operator_id, params[:operator_id], id: "operatorIdHidden" %>

              <!-- DROPDOWN -->
              <ul
                id="operatorDropdown"
                class="absolute z-30 mt-1 w-full max-h-56 overflow-y-auto
                       rounded-lg border bg-white shadow-lg hidden"
              >
                <% @operators.each do |op| %>
                  <li
                    class="operator-item px-4 py-2.5 text-sm cursor-pointer
                           hover:bg-yellow-50 hover:text-yellow-700"
                    data-id="<%= op['operator_id'] %>"
                    data-name="<%= op['name'] %>"
                  >
                    <%= op['name'] %>
                  </li>
                <% end %>
              </ul>
            </div>

          </div>
        </div>

        <!-- ================= COMMISSION ================= -->
        <div>
          <h2 class="text-lg font-semibold text-gray-900 mb-6">
            Commission Distribution (%)
          </h2>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">
              Admin %
            </label>

            <%= f.number_field :admin_commission,
                  step: 0.01,
                  class: "w-full rounded-lg border px-4 py-2.5" %>
          </div>
        </div>

        <!-- ================= SUBMIT ================= -->
        <div class="pt-6 border-t flex justify-end">
          <%= f.submit "Create Commission",
                class: "px-8 py-3 rounded-lg font-semibold text-white
                        bg-gradient-to-r from-yellow-600 to-yellow-700" %>
        </div>

      <% end %>

    </div>
  </div>
</div>

<!-- ================= JS ================= -->
<script>
document.addEventListener("DOMContentLoaded", () => {
  const searchInput = document.getElementById("operatorSearch");
  const dropdown = document.getElementById("operatorDropdown");
  const operatorNameHidden = document.getElementById("operatorHidden");
  const operatorIdHidden = document.getElementById("operatorIdHidden");
  const items = document.querySelectorAll(".operator-item");
  const form = searchInput.closest("form");

  searchInput.addEventListener("focus", () => {
    dropdown.classList.remove("hidden");
  });

  searchInput.addEventListener("input", () => {
    const value = searchInput.value.toLowerCase();
    items.forEach(item => {
      item.style.display = item.dataset.name.toLowerCase().includes(value)
        ? "block"
        : "none";
    });
  });

  items.forEach(item => {
    item.addEventListener("click", () => {
      searchInput.value = item.dataset.name;
      operatorNameHidden.value = item.dataset.name;
      console.log("==========operatorNameHidden========");
      console.log(item.dataset.name);
      operatorIdHidden.value = item.dataset.id;
       console.log("==========operatorNameHidden========");
      console.log(item.dataset.id);
      dropdown.classList.add("hidden");
    });
  });

  document.addEventListener("click", (e) => {
    if (!e.target.closest(".relative")) {
      dropdown.classList.add("hidden");
    }
  });

  form.addEventListener("submit", () => {
    operatorNameHidden.value = searchInput.value.trim();
  });
});
</script>
