<div class="w-full  mx-auto px-6 py-12 bg-blue-50 min-h-screen" data-controller="bankmodal">
  <!-- Header Row -->
  <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center bg-white border rounded-lg p-4 mb-6 shadow-sm gap-4">
    <div>
      <h3 class="text-lg font-bold">Bank Details Management</h3>
      <p class="text-sm text-gray-600">
        Manage bank accounts and financial details for transactions
      </p>
    </div>
     <a href="<%=new_superadmin_bank_path%>" class="flex items-center gap-2 bg-blue-600 text-white px-4 py-2 rounded-lg shadow hover:bg-blue-700">
       <i class="fa fa-plus"></i> Add Bank Account
    </a>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-4 mb-6">
    <div class="bg-white shadow rounded-lg p-4 flex items-center gap-4">
      <div class="w-10 h-10 flex items-center justify-center bg-blue-100 rounded-full">
        <i class="fas fa-building text-blue-500 text-xl"></i>
      </div>
      <div>
        <h2 class="text-blue-500 font-semibold text-sm">Total Banks</h2>
        <h3 class="text-gray-800 font-bold text-lg"><%=Bank.all.count%></h3>
      </div>
    </div>
    <div class="bg-white shadow rounded-lg p-4 flex items-center gap-4">
      <div class="w-10 h-10 flex items-center justify-center bg-green-100 rounded-full">
        <i class="fas fa-check-circle text-green-500 text-xl"></i>
      </div>
      <div>
        <h2 class="text-blue-500 font-semibold text-sm">Active Accounts</h2>
        <h3 class="text-gray-800 font-bold text-lg">0</h3>
      </div>
    </div>
    <div class="bg-white shadow rounded-lg p-4 flex items-center gap-4">
      <div class="w-10 h-10 flex items-center justify-center bg-yellow-100 rounded-full">
        <i class="fas fa-money-bill-wave text-yellow-500 text-xl"></i>
      </div>
      <div>
        <h2 class="text-blue-500 font-semibold text-sm">Total Balance</h2>
        <h3 class="text-gray-800 font-bold text-lg"><%=Bank.pluck(:initial_balance).sum%></h3>
      </div>
    </div>
    <div class="bg-white shadow rounded-lg p-4 flex items-center gap-4">
      <div class="w-10 h-10 flex items-center justify-center bg-red-100 rounded-full">
        <i class="fas fa-shield-alt text-red-500 text-xl"></i>
      </div>
      <div>
        <h2 class="text-blue-500 font-semibold text-sm">Default Account</h2>
        <h3 class="text-gray-800 font-bold text-lg truncate">None</h3>
      </div>
    </div>
  </div>

  <!-- Search + Filter -->
  <div class="bg-white rounded-lg shadow p-4 flex flex-col md:flex-row md:items-center justify-between gap-4 mb-6">
    <div class="flex items-center flex-1 border rounded px-3 py-2">
      <i class="fas fa-search text-gray-400 mr-2"></i>
      <input
        type="text"
        placeholder="Search by bank name or account name..."
        class="w-full outline-none text-sm"
      />
    </div>

    <!-- Dropdown -->
    <div class="relative">
      <button
        class="bg-sky-500 hover:bg-sky-600 text-white px-4 py-2 rounded-full flex items-center gap-2 text-sm"
      >
        Select Type <i class="fas fa-chevron-down"></i>
      </button>
      <!-- Example dropdown (hidden by default) -->
      <ul class="absolute mt-2 bg-white rounded-lg shadow-lg w-48 z-10 right-0 max-h-60 overflow-y-auto hidden">
        <li class="px-4 py-2 hover:bg-gray-100 cursor-pointer text-sm">Private</li>
        <li class="px-4 py-2 hover:bg-gray-100 cursor-pointer text-sm">Public</li>
        <li class="px-4 py-2 hover:bg-gray-100 cursor-pointer text-sm">Business</li>
      </ul>
    </div>
  </div>

  <!-- Bank Details Table -->
  <div class="overflow-x-auto bg-white shadow rounded-lg">
    <table class="w-full text-sm border-collapse">
      <thead>
        <tr class="bg-gray-100 text-gray-700 text-left">
          <th class="p-3">Account Holder</th>
          <th class="p-3">Bank Name</th>
          <th class="p-3">Account no.</th>
          <th class="p-3">IFSC Code</th>
          <th class="p-3">Account Type</th>
          <th class="p-3">Blance</th>
          <th class="p-3">Action</th>
        </tr>
      </thead>
      <tbody>
        <%@banks.each do |bank|%>
        <tr class="bg-white border-b hover:bg-gray-50">
          <td class="p-3">
            <%=bank.id%>
          </td>
          <td class="p-3">
            <%=bank.first_name%>
          </td>
          <td class="p-3">
            <%=bank.bank_name%>
          </td>
           <td class="p-3">
            <%=bank.account_number%>
          </td>
          <td class="p-3">
            <%=bank.account_type%>
          </td>
          <td class="p-3">
            <%=bank.initial_balance%>
          </td>
          <td class="flex gap-2 p-3">
            <a href="<%=edit_superadmin_bank_path(bank)%>" class="cursor-pointer px-3 py-1 text-sm font-medium text-white bg-yellow-500 rounded-lg hover:bg-yellow-600 transition">
              Edit
            </a>
            
            <%= button_to "Delete",
              superadmin_bank_path(bank),
              method: :delete,
              data: { turbo_confirm: "Are you sure you want to delete this bank?" },
              class: "px-3 py-1 text-sm font-medium text-white bg-red-500 rounded-lg hover:bg-red-600" %>

          </td>
        </tr>
        <%end%>
      </tbody>
    </table>
  </div>

</div>
