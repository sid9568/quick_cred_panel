<div class="mt-6 px-8">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center bg-white border rounded-lg p-4 mb-6 shadow-sm gap-4">
    <div>
      <h3 class="text-lg font-bold">Service List</h3>
    </div>
    <a href="<%= new_superadmin_service_path %>" 
       class="flex items-center gap-2 bg-blue-600 text-white px-4 py-2 rounded-lg shadow hover:bg-blue-700 transition">
      <i class="fa fa-plus"></i> Add Service
    </a>
  </div>

  <!-- Table -->
  <div class="overflow-x-auto bg-white shadow-md rounded-lg">
    <table class="w-full text-sm text-left text-gray-600">
      <thead class="text-xs uppercase bg-gray-100 text-gray-700">
        <tr>
          <th scope="col" class="px-6 py-3">ID</th>
          <th scope="col" class="px-6 py-3">Title</th>
          <th scope="col" class="px-6 py-3">Status</th>
          <th scope="col" class="px-6 py-3 text-center">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% Service.all.each do |service| %>
          <tr class="bg-white border-b hover:bg-gray-50">
            <!-- ID -->
            <td class="px-6 py-4 font-medium text-gray-900"><%= service.id %></td>

            <!-- Title -->
            <td class="px-6 py-4"><%= service.title %></td>

            <!-- Status -->
            <td class="px-6 py-4">
              <% if service %>
                <span class="px-2 py-1 bg-green-100 text-green-700 rounded-full text-xs">Active</span>
              <% else %>
                <span class="px-2 py-1 bg-red-100 text-red-700 rounded-full text-xs">Inactive</span>
              <% end %>
            </td>

            <!-- Actions -->
            <td class="flex px-6 py-4 justify-center gap-2">
              <a href="<%= superadmin_categories_path(service_id: service.id) %>" 
                 class="px-3 py-1 text-sm font-medium text-white bg-green-500 rounded-lg hover:bg-green-600 transition">
                View Categories
              </a>
              <a href="<%= edit_superadmin_service_path(service) %>" 
                 class="px-3 py-1 text-sm font-medium text-white bg-yellow-500 rounded-lg hover:bg-yellow-600 transition">
                Edit
              </a>
              <%= button_to "Delete", superadmin_service_path(service), 
                    method: :delete, 
                    data: { turbo_confirm: "Are you sure you want to delete this service?" }, 
                    class: "px-3 py-1 text-sm font-medium text-white bg-red-500 rounded-lg hover:bg-red-600 transition" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
