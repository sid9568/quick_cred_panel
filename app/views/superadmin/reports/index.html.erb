<div class="flex-1 px-4">
  <div class="max-w-8xl mx-auto mt-4 ">
    <div class="bg-white rounded-3xl shadow-xl p-8 border border-indigo-200">
      
      <!-- Title -->
      <h2 class="text-2xl font-semibold text-indigo-800 mb-6 pl-2 border-l-4 border-indigo-500">
      Reports
      </h2>
      <!-- Grid -->
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-8">
        <!-- BBPS -->
        <div class="group flex flex-col items-center justify-center p-4 bg-gradient-to-b from-white to-blue-50 rounded-2xl shadow-sm hover:shadow-lg border border-yellow-200 transition-all cursor-pointer hover:scale-105">
          <div class="mb-3 p-3 bg-blue-100 rounded-full">
            <img src="<%= asset_path 'report1.png' %>" alt="BBPS" class="w-10 h-10">
          </div>
          <span class="text-sm font-medium text-gray-700 group-hover:text-indigo-800 text-center">BBPS</span>
          <span class="mt-1 text-lg font-semibold text-indigo-900">99</span>
        </div>
        <!-- Travel & Stay -->
        <div class="group flex flex-col items-center justify-center p-4 bg-gradient-to-b from-white to-blue-50 rounded-2xl shadow-sm hover:shadow-lg border border-yellow-200 transition-all cursor-pointer hover:scale-105">
          <div class="mb-3 p-3 bg-blue-100 rounded-full">
            <img src="<%= asset_path 'report2.png' %>" alt="Travel & Stay Icon" class="w-10 h-10"/>
          </div>
          <span class="text-sm font-medium text-gray-700 group-hover:text-indigo-800 text-center">Travel & Stay</span>
          <span class="mt-1 text-lg font-semibold text-indigo-900">0</span>
        </div>
        <!-- Loan & Credit -->
        <div class="group flex flex-col items-center justify-center p-4 bg-gradient-to-b from-white to-blue-50 rounded-2xl shadow-sm hover:shadow-lg border border-yellow-200 transition-all cursor-pointer hover:scale-105">
          <div class="mb-3 p-3 bg-blue-100 rounded-full">
            <img src="<%= asset_path 'report3.png' %>" alt="Loan & Credit Icon" class="w-10 h-10"/>
          </div>
          <span class="text-sm font-medium text-gray-700 group-hover:text-indigo-800 text-center">Loan & Credit</span>
          <span class="mt-1 text-lg font-semibold text-indigo-900">0</span>
        </div>
        <!-- Investment -->
        <div class="group flex flex-col items-center justify-center p-4 bg-gradient-to-b from-white to-blue-50 rounded-2xl shadow-sm hover:shadow-lg border border-yellow-200 transition-all cursor-pointer hover:scale-105">
          <div class="mb-3 p-3 bg-blue-100 rounded-full">
            <img src="<%= asset_path 'report4.png' %>" alt="Investment Icon" class="w-10 h-10"/>
          </div>
          <span class="text-sm font-medium text-gray-700 group-hover:text-indigo-800 text-center">Investment</span>
          <span class="mt-1 text-lg font-semibold text-indigo-900">0</span>
        </div>
        <!-- Utility Service -->
        <div class="group flex flex-col items-center justify-center p-4 bg-gradient-to-b from-white to-blue-50 rounded-2xl shadow-sm hover:shadow-lg border border-yellow-200 transition-all cursor-pointer hover:scale-105">
          <div class="mb-3 p-3 bg-blue-100 rounded-full">
            <img src="<%= asset_path 'report5.png' %>" alt="Utility Service Icon" class="w-10 h-10"/>
          </div>
          <span class="text-sm font-medium text-gray-700 group-hover:text-indigo-800 text-center">Utility Service</span>
          <span class="mt-1 text-lg font-semibold text-indigo-900">0</span>
        </div>
        <!-- Electric Vehicle -->
        <div class="group flex flex-col items-center justify-center p-4 bg-gradient-to-b from-white to-blue-50 rounded-2xl shadow-sm hover:shadow-lg border border-yellow-200 transition-all cursor-pointer hover:scale-105">
          <div class="mb-3 p-3 bg-blue-100 rounded-full">
            <img src="<%= asset_path 'report6.png' %>" alt="Electric Vehicle Icon" class="w-10 h-10"/>
          </div>
          <span class="text-sm font-medium text-gray-700 group-hover:text-indigo-800 text-center">Electric Vehicle</span>
          <span class="mt-1 text-lg font-semibold text-indigo-900">0</span>
        </div>
        <!-- Entertainment -->
        <div class="group flex flex-col items-center justify-center p-4 bg-gradient-to-b from-white to-blue-50 rounded-2xl shadow-sm hover:shadow-lg border border-yellow-200 transition-all cursor-pointer hover:scale-105">
          <div class="mb-3 p-3 bg-blue-100 rounded-full">
            <img src="<%= asset_path 'report7.png' %>" alt="Entertainment Icon" class="w-10 h-10"/>
          </div>
          <span class="text-sm font-medium text-gray-700 group-hover:text-indigo-800 text-center">Entertainment</span>
          <span class="mt-1 text-lg font-semibold text-indigo-900">0</span>
        </div>
        <!-- Insurance -->
        <div class="group flex flex-col items-center justify-center p-4 bg-gradient-to-b from-white to-blue-50 rounded-2xl shadow-sm hover:shadow-lg border border-yellow-200 transition-all cursor-pointer hover:scale-105">
          <div class="mb-3 p-3 bg-blue-100 rounded-full">
            <img src="<%= asset_path 'report8.png' %>" alt="Insurance Icon" class="w-10 h-10"/>
          </div>
          <span class="text-sm font-medium text-gray-700 group-hover:text-indigo-800 text-center">Insurance</span>
          <span class="mt-1 text-lg font-semibold text-indigo-900">0</span>
        </div>
        <!-- Commission Report -->
        <div class="group flex flex-col items-center justify-center p-4 bg-gradient-to-b from-white to-blue-50 rounded-2xl shadow-sm hover:shadow-lg border border-yellow-200 transition-all cursor-pointer hover:scale-105">
          <div class="mb-3 p-3 bg-blue-100 rounded-full">
            <img src="<%= asset_path 'commision.png' %>" alt="Commission Report Icon" class="w-10 h-10"/>
          </div>
          <span class="text-sm font-medium text-gray-700 group-hover:text-indigo-800 text-center">Commission Report</span>
          <span class="mt-1 text-lg font-semibold text-indigo-900">0</span>
        </div>
        <!-- Earn Commission -->
        <div class="group flex flex-col items-center justify-center p-4 bg-gradient-to-b from-white to-blue-50 rounded-2xl shadow-sm hover:shadow-lg border border-yellow-200 transition-all cursor-pointer hover:scale-105">
          <div class="mb-3 p-3 bg-blue-100 rounded-full">
            <img src="<%= asset_path 'commision.png' %>" alt="Earn Commission Icon" class="w-10 h-10"/>
          </div>
          <span class="text-sm font-medium text-gray-700 group-hover:text-indigo-800 text-center">Earn Commission</span>
          <span class="mt-1 text-lg font-semibold text-indigo-900">
            <%=  TransactionCommission.where(user_id: 136).pluck(:commission_amount).compact.sum.to_f %>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>