<!-- ================= FILTER ================= -->
<%= turbo_frame_tag "report_results" do %>
  <div class="bg-white rounded-xl shadow-md border border-gray-200 px-6 py-5 mb-6">
    <h2 class="text-lg font-semibold text-orange-700 mb-4">
      BBPS Report
    </h2>

    <%= form_with url: superadmin_reports_report_filter_path,
                  method: :get,
                  data: { turbo_frame: "report_results" },
                  class: "grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-7 gap-4 items-end" do %>

      <!-- Category -->
      <div>
        <label class="block text-xs font-semibold text-gray-600 mb-1">Category</label>
        <select name="category_id"
                onchange="this.form.requestSubmit()"
                class="w-full h-10 rounded-lg border border-gray-300 px-3 text-sm
                       focus:border-orange-500 focus:ring-1 focus:ring-orange-500">
          <option value="ALL">-- Select Category --</option>
          <% @categories.each do |c| %>
            <option value="<%= c.id %>" <%= "selected" if params[:category_id] == c.id.to_s %>>
              <%= c.title %>
            </option>
          <% end %>
        </select>
      </div>

      <!-- Product (Only show if categories available) -->
      <div>
        <label class="block text-xs font-semibold text-gray-600 mb-1">Product</label>
        <select name="service_product_id"
                onchange="this.form.requestSubmit()"
                class="w-full h-10 rounded-lg border border-gray-300 px-3 text-sm
                       focus:border-orange-500 focus:ring-1 focus:ring-orange-500"
                <%= @service_products.empty? ? "disabled" : "" %>>
          <option value="ALL">-- Select Product --</option>
          <% if @service_products.any? %>
            <% @service_products.each do |sp| %>
              <option value="<%= sp.id %>"
                <%= "selected" if params[:service_product_id] == sp.id.to_s %>>
                <%= sp.company_name %>
              </option>
            <% end %>
          <% else %>
            <option value="ALL" disabled>Select category first</option>
          <% end %>
        </select>
      </div>

      <!-- From Date -->
      <div>
        <label class="block text-xs font-semibold text-gray-600 mb-1">From Date</label>
        <input type="date"
               name="from_date"
               value="<%= params[:from_date] %>"
               onchange="this.form.requestSubmit()"
               class="w-full h-10 rounded-lg border border-gray-300 px-3 text-sm
                      focus:border-orange-500 focus:ring-1 focus:ring-orange-500">
      </div>

      <!-- To Date -->
      <div>
        <label class="block text-xs font-semibold text-gray-600 mb-1">To Date</label>
        <input type="date"
               name="to_date"
               value="<%= params[:to_date] %>"
               onchange="this.form.requestSubmit()"
               class="w-full h-10 rounded-lg border border-gray-300 px-3 text-sm
                      focus:border-orange-500 focus:ring-1 focus:ring-orange-500">
      </div>

      <!-- Status -->
      <div>
        <label class="block text-xs font-semibold text-gray-600 mb-1">Status</label>
        <select name="status"
                onchange="this.form.requestSubmit()"
                class="w-full h-10 rounded-lg border border-gray-300 px-3 text-sm
                       focus:border-orange-500 focus:ring-1 focus:ring-orange-500">
          <option value="ALL">-- Select Status --</option>
          <option value="SUCCESS" <%= "selected" if params[:status] == "SUCCESS" %>>SUCCESS</option>
          <option value="FAILED" <%= "selected" if params[:status] == "FAILED" %>>FAILED</option>
          <option value="PENDING" <%= "selected" if params[:status] == "PENDING" %>>PENDING</option>
        </select>
      </div>

      <!-- Buttons -->
      <div class="flex gap-2 lg:col-span-7 justify-end mt-2">
        <%= link_to "Reset",
              superadmin_reports_report_filter_path,
              data: { turbo_frame: "report_results" },
              class: "px-5 py-2 border rounded-lg text-sm text-gray-600 hover:bg-gray-100" %>
      </div>
    <% end %>
  </div>

  <!-- ================= RESULTS ================= -->
  <div class="bg-white rounded-xl shadow-md border border-gray-200 overflow-x-auto">
    <!-- Summary Stats (Optional) -->
    <% if @transactions.any? %>
      <div class="bg-gray-50 px-4 py-3 border-b flex flex-wrap gap-4">
        <div class="text-sm">
          <span class="font-semibold text-gray-700">Total Transactions:</span>
          <span class="ml-2 text-orange-600 font-bold"><%= @transactions.count %></span>
        </div>
        <div class="text-sm">
          <span class="font-semibold text-gray-700">Total Amount:</span>
          <span class="ml-2 text-green-600 font-bold">â‚¹<%= @transactions.sum(:amount) %></span>
        </div>
      </div>
    <% end %>

    <table class="min-w-full text-sm border-collapse">
      <thead class="bg-yellow-100 border-b border-gray-300">
        <tr>
          <th class="px-4 py-3 border">Transaction ID</th>
          <th class="px-4 py-3 border">Date & Time</th>
          <th class="px-4 py-3 border">Consumer Mobile No</th>
          <th class="px-4 py-3 border">Service Type</th>
          <th class="px-4 py-3 border">Sub-Service</th>
          <th class="px-4 py-3 border">Operator</th>
          <th class="px-4 py-3 border">Commission</th>
          <th class="px-4 py-3 border">Amount</th>
          <th class="px-4 py-3 border">Status</th>
          <th class="px-4 py-3 border text-center">Action</th>
        </tr>
      </thead>

      <tbody>
        <% if @transactions.any? %>
          <% @transactions.each do |t| %>
            <tr class="border-b hover:bg-gray-50">
              <td class="px-4 py-3 border font-medium"><%= t.tx_id %></td>
              <td class="px-4 py-3 border">
                <%= t.created_at.strftime("%Y-%m-%d") %><br>
                <span class="text-xs text-gray-500"><%= t.created_at.strftime("%H:%M:%S") %></span>
              </td>
              <td class="px-4 py-3 border"><%= t.mobile %></td>
              <td class="px-4 py-3 border"><%= t.service_product&.category&.title %></td>
              <td class="px-4 py-3 border"><%= t.service_product&.company_name %></td>
              <td class="px-4 py-3 border"><%= t.operator %></td>
              <td class="px-4 py-3 border text-green-600 font-semibold">â‚¹<%= t.commission || 0 %></td>
              <td class="px-4 py-3 border font-semibold">â‚¹<%= t.amount %></td>
              <td class="px-4 py-3 border">
                <span class="px-3 py-1 text-xs font-semibold rounded-full
                  <%= t.status == "SUCCESS" ? "bg-green-100 text-green-700" :
                      t.status == "FAILED" ? "bg-red-100 text-red-700" :
                      "bg-yellow-100 text-yellow-700" %>">
                  <%= t.status %>
                </span>
              </td>
              <td class="px-4 py-3 border text-center">
                <%= link_to "ðŸ‘", "#", class: "hover:text-orange-600" %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="10" class="text-center py-6 text-gray-500">
              <% if params[:category_id].present? && params[:category_id] != "ALL" %>
                No transactions found for selected category
              <% elsif params[:service_product_id].present? && params[:service_product_id] != "ALL" %>
                No transactions found for selected product
              <% else %>
                No transactions found
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>