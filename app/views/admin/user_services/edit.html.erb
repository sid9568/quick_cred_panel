<div class="w-[1000px] mx-auto p-6 bg-white shadow-md rounded-xl h-[800px] mt-8 mb-4 overflow-auto">
  <h2 class="text-2xl font-bold mb-6">Edit User Details</h2>
<%= form_with model: @user_service,
                url: admin_user_service_path(@user_service),
                method: :patch,
                html: { class: "grid grid-cols-1 md:grid-cols-3 gap-6" } do |form| %>

    <div>
      <label class="block text-sm font-medium text-gray-700">Full Name</label>
      <input type="text" value="<%=@user_service.first_name%>" name="user[first_name]" class="mt-1 w-full border rounded-lg px-3 py-2">
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700">Username</label>
      <input type="text" value="<%=@user_service.username%>" name="user[username]" class="mt-1 w-full border rounded-lg px-3 py-2">
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700">Email</label>
      <input type="email" value="<%=@user_service.email%>" name="user[email]" class="mt-1 w-full border rounded-lg px-3 py-2">
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700">Phone Number</label>
      <input type="text" value="<%=@user_service.phone_number%>" name="user[phone_number]" class="mt-1 w-full border rounded-lg px-3 py-2">
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700">Alternative Number</label>
      <input type="text" value="<%=@user_service.alternative_number%>" name="user[alternative_number]" class="mt-1 w-full border rounded-lg px-3 py-2">
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700">Date of Birth</label>
      <input type="date" value="<%=@user_service.date_of_birth%>" name="user[date_of_birth]" class="mt-1 w-full border rounded-lg px-3 py-2">
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700">Gender</label>
      <select name="user[gender]" class="mt-1 w-full border rounded-lg px-3 py-2">
        <option value="">Select</option>
        <option>Male</option>
        <option>Female</option>
        <option>Other</option>
      </select>
    </div>

    <!-- Identity -->
    <div>
      <label class="block text-sm font-medium text-gray-700">Aadhaar Number</label>
      <input type="text" value="<%=@user_service.aadhaar_number%>" name="user[aadhaar_number]" class="mt-1 w-full border rounded-lg px-3 py-2">
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700">PAN Card</label>
      <input type="text" value="<%=@user_service.pan_card%>" name="user[pan_card]" class="mt-1 w-full border rounded-lg px-3 py-2">
    </div>

    <!-- Business Details -->
    <div>
      <label class="block text-sm font-medium text-gray-700">Business Name</label>
      <input type="text" value="<%=@user_service.business_name%>" name="user[business_name]" class="mt-1 w-full border rounded-lg px-3 py-2">
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700">Business Owner Type</label>
      <input type="text" value="<%=@user_service.business_owner_type%>" name="user[business_owner_type]" class="mt-1 w-full border rounded-lg px-3 py-2">
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700">Business Nature Type</label>
      <input type="text" value="<%=@user_service.business_nature_type%>" name="user[business_nature_type]" class="mt-1 w-full border rounded-lg px-3 py-2">
    </div> 


    <div>
      <label class="block text-sm font-medium text-gray-700">Business Registration Number</label>
      <input type="text" value="<%=@user_service.business_registration_number%>" name="user[business_registration_number]" class="mt-1 w-full border rounded-lg px-3 py-2">
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700">GST Number</label>
      <input type="text" value="<%=@user_service.gst_number%>" name="user[gst_number]" class="mt-1 w-full border rounded-lg px-3 py-2">
    </div>

     <!-- Scheme -->
    <div>
    <label class="block text-sm font-medium text-gray-700">Scheme</label>
    <select
      name="user[scheme_id]"
      class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm p-3 border border-gray-200">
      <option value="">Select Scheme</option>
      <% Scheme.all.each do |sch| %>
        <option value="<%= sch.id %>" <%= "selected" if @user_service.scheme_id == sch.id %>>
          <%= sch.scheme_name %>
        </option>
      <% end %>
    </select>
    </div>


    <!-- Address -->
    <div class="md:col-span-2">
      <label class="block text-sm font-medium text-gray-700">Full Address</label>
      <textarea name="user[address]" value="<%=@user_service.address%>" rows="2" class="mt-1 w-full border rounded-lg px-3 py-2"></textarea>
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700">Pincode</label>
      <input type="text" value="<%=@user_service.pincode%>" name="user[pincode]" class="mt-1 w-full border rounded-lg px-3 py-2">
    </div>

    <!-- Bank Details -->
    <div>
      <label class="block text-sm font-medium text-gray-700">Bank Name</label>
      <input type="text" value="<%=@user_service.bank_name%>" name="user[bank_name]" class="mt-1 w-full border rounded-lg px-3 py-2">
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700">Account Number</label>
      <input type="text" value="<%#=@user_service.account_number%>" name="user[account_number]" class="mt-1 w-full border rounded-lg px-3 py-2">
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700">Account Holder Name</label>
      <input type="text" value="<%#=@user_service.account_holder_name%>"  name="user[account_holder_name]" class="mt-1 w-full border rounded-lg px-3 py-2">
    </div>

      <div>
    <label class="block text-sm font-medium text-gray-700 mb-2">Services</label>

    <div class="grid grid-cols-2 gap-2">
      <% @services.each do |service| %>
        <% assigned = UserService.exists?(assignee_id: @user_service.id, service_id: service.id) %>

        <div class="flex items-center space-x-2">
          <%= check_box_tag "user[service_ids][]", service.id, assigned,
            id: "service_#{service.id}",
            class: "w-4 h-4",
            data: { action: "retailer#toggle", retailer_target: "checkbox" } %>
          <%= label_tag "service_#{service.id}", service.title.capitalize, class: "text-gray-600 font-medium" %>
        </div>
      <% end %>
    </div>
  </div>


    <!-- Buttons -->
    <div class="md:col-span-3 h-[50px] flex justify-end gap-4">
      <button type="reset" class="px-4 py-2 bg-red-600 border rounded-lg">Cancel</button>
      <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg">Update</button>
    </div>

  <%end%>
</div>